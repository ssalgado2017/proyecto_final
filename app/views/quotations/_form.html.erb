<div class= "well bs-component">
<%= form_with(model: quotation, local: true) do |form| %>
  <% if quotation.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(quotation.errors.count, "error") %> prohibited this quotation from being saved:</h2>

      <ul>
      <% quotation.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>


  <div class="form-group">
    <%= form.label :Código, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= form.text_field :code_quotation, id: :quotation_code_quotation %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :Título, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= form.text_field :title, id: :quotation_title %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :Descripción, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= form.text_area :description, id: :quotation_description %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :Estado , class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= form.select :state_id, options_for_select(@states.map {|state| [state.name, state.id]}, form.object.state_id), {}, {class: "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :Cliente , class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= form.select :client_id, options_for_select(@clients.map {|client| [client.name, client.id]}, form.object.client_id), {}, {class: "form-control"} %>
    </div>
  </div>

  <div class="form-group">
    <%= form.label :Documento, class: "col-lg-2 control-label"%>
    <div class="col-lg-10">
      <%= form.file_field :document, id: :document, class: "btn btn-info btn-sm"%>
    </div>
  </div>


  <div class="actions">
    <%= form.submit class: "btn btn-success"%>
  </div>


<% end %>
</div>
